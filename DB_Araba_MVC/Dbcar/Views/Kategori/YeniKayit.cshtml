@model Dbcar.Models.Entity.TblKategoriler
@{
    ViewBag.Title = "YeniKayit";
    Layout = "~/Views/Shared/_MainLayaout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Kategori Adı</label>
        @Html.TextBoxFor(m=>m.KategoriAd, new { @class="form-control"})
        @Html.ValidationMessageFor(m=>m.KategoriAd, "", new { @style="color:red"})
    </div>
    <div style="margin-top:20px;">
        <button class="btn btn-info" id="btn1">Kategori Ekle</button>
    </div>
    <script>
        $('#btn1').click(function () {
            alert('Kategori Ekleme İşlemi Gerçekleştirildi.');
        });
    </script>
</form>
