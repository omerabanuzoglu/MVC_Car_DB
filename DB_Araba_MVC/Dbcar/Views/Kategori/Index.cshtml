@using Dbcar.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TblKategoriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayaout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <th>@ktgr.KategoriId</th>
                <td>@ktgr.KategoriAd</td>
                <td><a href="/Kategori/Sil/@ktgr.KategoriId" class="btn btn-danger">SİL</a></td>
                <td><a href="/Kategori/Getir/@ktgr.KategoriId" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))

<a href="/Kategori/YeniKayit/" class="btn btn-primary">Yeni Kayıt Oluştur</a>
<br />